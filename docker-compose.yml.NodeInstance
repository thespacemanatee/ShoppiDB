version: "3.9"
services:
  client:
    build:
      context: ./shoppi_market
    ports:
      - "3000:3000"
    container_name: client
    stdin_open: true
    volumes:
      - ./shoppi_market:/app
      - /app/node_modules
    networks:
      - db
  load:
    build:
      context: ./loadBalancer
    ports:
      - "8000:80"
    container_name: load
    volumes:
      - ./loadBalancer/nginx.conf:/etc/nginx/conf.d/default.conf
    restart: always
    networks:
      - db
  node0: #DNS name
    build:
      context: ./
      dockerfile: DockerFile_NodeInstance
    container_name: node0
    restart: unless-stopped
    environment:
      - NODE_TOTAL=10
      - NODE_ID=0
      - RACE_DETECTOR=1
      - BUILD_ARGS=./src
      - SEEDNODES=0 1
      - MEMBERSHIP=yes
    volumes:
      - devnode0:/redis/volume
    networks:
      - db
    healthcheck:
      test: curl -f "http://localhost:8080/checkHeartbeat"|| exit 1
      interval: 1m30s
      timeout: 30s
      retries: 5
      start_period: 10s
